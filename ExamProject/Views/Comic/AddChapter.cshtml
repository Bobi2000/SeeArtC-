@{
    ViewData["Title"] = "AddChapter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddChapter</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Comic" asp-action="AddChapter" method="post" enctype="multipart/form-data">
            <hr />

            <input class="form-control" value="@ViewData["id"]" type="hidden" name="comicId" />

            <div class="form-group">
                <input class="form-control" type="file" name="file" />
            </div>

            <div class="form-group">
                Title <br />
                <input class="form-control" type="text" name="title" />
            </div>

            <div class="form-group">
                <button asp-page-handler="Add" style="background-color: #1e8cfd;" class="btn btn-default" type="submit">Add Another Page</button>
                <button asp-page-handler="Submit" class="btn btn-danger" type="submit"><div style="color: black">Upload</div></button>
            </div>
            <div class="form-group">

            </div>
        </form>
    </div>
</div>